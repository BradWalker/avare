<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/wnb_mainpage"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#FFFFFF">

	<LinearLayout
		android:id="@+id/idllSLEButtons"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="false">

		<ImageButton
			android:id="@+id/idToggle"
			style="?android:attr/borderlessButtonStyle"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="3"
			android:gravity="center_horizontal|center_vertical"
			android:src="@android:drawable/arrow_down_float"
			android:text="T"
			android:textSize="14sp"
			android:textStyle="bold" />

		<Button
			android:id="@+id/idLoad"
			style="?android:attr/borderlessButtonStyle"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="10"
			android:gravity="center_horizontal|center_vertical"
			android:text="@string/Load"
			android:textSize="14sp"
			android:textStyle="bold" />

		<Button
			android:id="@+id/idGraph"
			style="?android:attr/borderlessButtonStyle"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="10"
			android:gravity="center_horizontal|center_vertical"
			android:text="@string/Graph"
			android:textSize="14sp"
			android:textStyle="bold" />

		<Button
			android:id="@+id/idSave"
			style="?android:attr/borderlessButtonStyle"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="10"
			android:gravity="center_horizontal|center_vertical"
			android:text="@string/Save"
			android:textSize="14sp"
			android:textStyle="bold" />

	</LinearLayout>

	<TableLayout
		android:id="@+id/idCGnWeight"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/idllSLEButtons"
		android:paddingLeft="10sp"
		android:paddingRight="10sp"
		android:showDividers="middle|beginning|end">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#60C2B6B6">

            <TextView
                android:id="@+id/idMake"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Vans"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idModel"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="RV10"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idReg"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="N820TX"
                android:textSize="24sp"
                android:textStyle="bold" />

        </TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp"
				android:layout_weight="1"
				android:gravity="end"
				android:text="@string/CGMin"
				android:textStyle="normal" />

			<EditText
				android:id="@+id/idCGMin"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:inputType="numberDecimal"
				android:maxLines="1" />

			<TextView
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp"
				android:layout_weight="1"
				android:gravity="end"
				android:text="@string/CG"
				android:textStyle="normal" />

			<EditText
				android:id="@+id/idCG"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:focusable="false"
				android:gravity="center_horizontal|center_vertical"
				android:inputType="none"
				android:maxLines="1" />

		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp"
				android:layout_weight="1"
				android:gravity="end"
				android:text="@string/CGMax"
				android:textStyle="normal" />

			<EditText
				android:id="@+id/idCGMax"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:inputType="numberDecimal"
				android:maxLines="1" />

			<TextView
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp"
				android:layout_weight="1"
				android:gravity="end"
				android:text="@string/TOWeight"
				android:textStyle="normal" />

			<EditText
				android:id="@+id/idWeight"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:focusable="false"
				android:gravity="center_horizontal|center_vertical"
				android:inputType="none"
				android:maxLines="1" />

		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp"
				android:layout_weight="1"
				android:gravity="end"
				android:text="@string/GrossWT"
				android:textStyle="normal" />

			<EditText
				android:id="@+id/idGross"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:inputType="numberDecimal"
				android:minLines="1" />

			<TextView
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp"
				android:layout_weight="1"
				android:gravity="end"
				android:text="Moment"
				android:textStyle="normal" />

			<EditText
				android:id="@+id/idMoment"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:duplicateParentState="false"
				android:focusable="false"
				android:gravity="center_horizontal|center_vertical"
				android:inputType="none"
				android:maxLines="1" />

		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp"
				android:layout_weight="1"
				android:gravity="end"
				android:text="@string/Empty"
				android:textStyle="normal" />

			<EditText
				android:id="@+id/idEmpty"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:inputType="numberDecimal"
				android:minLines="1" />

			<TextView
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp"
				android:layout_weight="1"
				android:gravity="end"
				android:text="@string/Status"
				android:textStyle="normal" />

			<EditText
				android:id="@+id/idStatus"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:duplicateParentState="false"
				android:focusable="false"
				android:gravity="center_horizontal|center_vertical"
				android:inputType="none"
				android:maxLines="1" />

		</TableRow>

	</TableLayout>

    <TableLayout
        android:id="@+id/idTitles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idCGnWeight"
        android:layout_marginTop="10sp"
        android:background="#60C2B6B6"
        android:showDividers="middle|beginning|end">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idtDescription"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:text="@string/Description"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idtLocation"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/Location"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/Weight"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>

	<ScrollView
		android:id="@+id/idScrollWindow"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/idTitles"
		android:fillViewport="false">


		<TableLayout
			android:id="@+id/idAircraftArms"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:showDividers="middle|beginning|end">

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<EditText
					android:id="@+id/idName0"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:importantForAutofill="no"
					android:inputType="text" />

				<EditText
					android:id="@+id/idLocation0"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

				<EditText
					android:id="@+id/idWeight0"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />
			</TableRow>

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<EditText
					android:id="@+id/idName1"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:inputType="text" />

				<EditText
					android:id="@+id/idLocation1"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

				<EditText
					android:id="@+id/idWeight1"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

			</TableRow>

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<EditText
					android:id="@+id/idName2"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:inputType="text" />

				<EditText
					android:id="@+id/idLocation2"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

				<EditText
					android:id="@+id/idWeight2"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

			</TableRow>

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<EditText
					android:id="@+id/idName3"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:inputType="text" />

				<EditText
					android:id="@+id/idLocation3"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

				<EditText
					android:id="@+id/idWeight3"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

			</TableRow>

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<EditText
					android:id="@+id/idName4"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:inputType="text" />

				<EditText
					android:id="@+id/idLocation4"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

				<EditText
					android:id="@+id/idWeight4"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

			</TableRow>

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<EditText
					android:id="@+id/idName5"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:inputType="text" />

				<EditText
					android:id="@+id/idLocation5"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

				<EditText
					android:id="@+id/idWeight5"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

			</TableRow>

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<EditText
					android:id="@+id/idName6"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:inputType="text" />

				<EditText
					android:id="@+id/idLocation6"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

				<EditText
					android:id="@+id/idWeight6"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

			</TableRow>

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<EditText
					android:id="@+id/idName7"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:inputType="text" />

				<EditText
					android:id="@+id/idLocation7"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

				<EditText
					android:id="@+id/idWeight7"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

			</TableRow>

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<EditText
					android:id="@+id/idName8"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:inputType="text" />

				<EditText
					android:id="@+id/idLocation8"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

				<EditText
					android:id="@+id/idWeight8"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

			</TableRow>

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<EditText
					android:id="@+id/idName9"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:inputType="text" />

				<EditText
					android:id="@+id/idLocation9"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

				<EditText
					android:id="@+id/idWeight9"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:inputType="number" />

			</TableRow>

		</TableLayout>
	</ScrollView>

	<TextView
		android:id="@+id/idCGEnv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/idllSLEButtons"
		android:visibility="invisible" />

</RelativeLayout>
